sampler gShadowMap = sampler_state{    AddressU  = WRAP;        	AddressV  = WRAP;    MipFilter = LINEAR;    MinFilter = LINEAR;    MagFilter = LINEAR;};float4 PSMain (float4 _PosProj : TEXCOORD0)	: COLOR0{	float gZBias = 0.01f;	_PosProj.xyz /= _PosProj.w;	_PosProj.xy = (_PosProj.xy + (1.f).xx) / (2.f).xx;	_PosProj.y = 1.f - _PosProj.y;	float Depth = tex2D(gShadowMap, _PosProj.xy);		if ( (_PosProj.x >= 0.f && _PosProj.x <= 1.f) &&		 (_PosProj.y >= 0.f && _PosProj.y <= 1.f) )	{		float ZDiff = abs(_PosProj.z - Depth);		if ( ZDiff >= gZBias )			return float4( ZDiff.xxx * 2.f, 1.f);	}	return float4((1.f).xxx, 1.f);}